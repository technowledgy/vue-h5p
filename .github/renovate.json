{
  "extends": [
    "config:js-lib"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "package.json"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "devDependencies"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "git-submodules": {
    "enabled": true
  }
}
